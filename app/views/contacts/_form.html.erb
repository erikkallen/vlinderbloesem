<div id="vlinder_categories_show">
	<div class="vlinder_buttons_show">
		<div class="vlinder_button_text_bar">
			<div style="float: left;">
				<div style="width: 214px;text-align:center;">
					Contact
				</div>
				
			</div>
			<div class="close_category">
				<%= link_to image_tag('vlinder_back.jpg'), pages_path %>
			</div>
		</div>
		<div class="content_container">
			<div class="category_image_container">
				<%= image_tag "contact.jpg"%>
		</div>
		<div id="category_text">
			Als u vragen heeft kunt u mij bereiken op 06-53446593 of uw bericht achter laten op het onderstaande formulier.
			<%= form_for(@contact) do |f| %>
			  <% if @contact.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

			      <ul>
			      <% @contact.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>
			  

			  <p>
			    <%= f.label :voornaam %><br />
			    <%= f.text_field :voornaam %>
			  </p>
			  <p>
			    <%= f.label :achternaam %><br />
			    <%= f.text_field :achternaam %>
			  </p>
			  <p>
			    <%= f.label :email %><br />
			    <%= f.text_field :email %>
			  </p>
			  <p>
			    <%= f.label :onderwerp %><br />
			    <%= f.text_field :onderwerp %>
			  </p>
			  <p>
			    <%= f.label :bericht %><br />
			    <%= f.text_area :bericht, :style => "width: 300px;height:150px" %>
			  </p>
			  <p>
			    <%= f.submit 'Verstuur' %>
			  </p>
			<% end %>
		</div>
	</div>
</div>
<br style="clear: both;" />